.article.wrap
  .row
    .large-12.columns
      %h3
        - if digest
          = link_to article.title, article
        - else
          = article.title
      .article-meta
        %p.date
          %span.label.secondary.radius= article.date.strftime('%Y - %m - %d')
        / .credit
        /   %i.icon-calendar
        /   = date_links article.date
        / = article.authors
        %ul.tags.inline-list
          - article.tags.each do |tag|
            %li= link_to tag ,'#', :class => 'label round'
            / %li= link_to tag ,tag_path(tag), :class => 'label round'
  .row
    .large-12.columns
      - if digest
        = article.summary
      - else
        = article.body

      - if digest && article.summary.length < article.body.length
        %p.readmore.text-right
          = link_to article.url, :class => 'secondary button tiny radius' do
            = '更多'
            %i.fa.fa-long-arrow-right
        / - unless digest
        /   %ul.read_next
        /     %li
        /       = article.previous_article ? link_to("<i class='icon-caret-left'></i> #{article.previous_article.title}", article.previous_article) : "&nbsp;"
        /     %li
        /       = article.next_article ? link_to("#{article.next_article.title} <i class='icon-caret-right'></i>", article.next_article) : "&nbsp;"
